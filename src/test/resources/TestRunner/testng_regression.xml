<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Opencart App Test Regression Suite" thread-count="3"
	parallel="tests" verbose="4">
	
	<listeners>
		<listener
			class-name="com.qa.opencart.listeners.ExtentReportListener" />
		<listener
			class-name="com.qa.opencart.listeners.TestAllureListener" />
		<listener
			class-name="com.qa.opencart.listeners.AnnotationTransformer" />
	</listeners>


	<test name="Login_Page_Test_Chrome">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.qa.opencart.test.LoginPageTest" />
		</classes>
	</test>
    
    <test name="Accounts_Page_Test_Edge">
    	<parameter name="browser" value="edge"></parameter>
		<classes>
			<class name="com.qa.opencart.test.AccountsPageTest" />
		</classes>
	</test>
	
	<test name="Product_Info_Page_Test_Firefox">
		<parameter name="browser" value="firefox"></parameter>
		<classes>
			<class name="com.qa.opencart.test.ProductInfoPageTest" />
		</classes>
	</test>
	
